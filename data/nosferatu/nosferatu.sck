# 35 rooms, 27 items, 46 actions
# 29 messages, 1 treasures, 30 verbs/nouns
ident 18401
version 1
wordlen 3
maxload 5
lighttime 100
unknown1 19540
unknown2 0
start coffin
treasury "treasury"

verbgroup WAL ENT GO RUN
verbgroup LEA DRO
verbgroup TAK GET
verbgroup OPE UNL

room "treasury" "treasury"

room coffin "coffin"
	exit east "room"

room "room" "rat-ridden room"
	exit north kitchen
	exit south chamber
	exit east balcony
	exit west coffin

room chamber "chamber"
	exit north "room"
	exit east library

room library "library"
	exit north balcony
	exit west chamber

room balcony "*I'm on a balcony"
	exit south library
	exit west "room"

room ledge "*I'm on a ledge"

room kitchen "kitchen"
	exit north washroom
	exit south "room"

room washroom "washroom"
	exit south kitchen

